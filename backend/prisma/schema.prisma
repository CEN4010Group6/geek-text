// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password_hash String
  created_at @default(now())
  updated_at @updatedAt
}

model Book {
  id Int @id @default(autoincrement())
  title String @unique
  author Author
  publisher Publisher
  description String
  genre Genre[]
  price Float
  rating Float
  cover_url String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Author {
  id Int @id @default(autoincrement())
  name String @unique
  description String
}

model Publisher {
  id Int @id @default(autoincrement())
  name String @unique
}

enum Genre {
  Fiction
  NonFiction
  SciFi
  Fantasy
  Romance
  Mystery
  Horror
  Childrens
  SelfHelp
  Cooking
  Religious
  Education
}
