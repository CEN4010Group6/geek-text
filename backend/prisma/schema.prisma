// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url = "file:../db/dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password_hash String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Book {
  book_id String @id @default(uuid())
  title String @unique
  author Author[]
  publisher Publisher
  description String
  genre Genre[]
  price Float
  rating Float
  cover_url String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Author {
  author_id String @id @default(uuid())
  name String @unique
  description String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Publisher {
  publisher_id String @id @default(uuid())
  publisher_name String @unique
}

model Genre {
  genre_id Int @id @default(autoincrement())
  genre_name String @unique
}
